
<%= render 'shared/header_show', { h1_show: 'h1_user_show', header_title: @user.full_name } %>

<%= render 'shared/accordion-page-top' %>

<% order_number = 1 %>
<%= render 'shared/folding_panel_top', { title: 'user_details', order_number: order_number, collapse: 'in' } %>
<%= render 'shared/user_photo_block' %>
<%= render 'shared/user_details_block' %>
<%= render 'shared/folding_panel_bottom' %>

<% order_number += 1 %>
<%= render 'shared/folding_panel_top', { title: 'emergency_contact', order_number: order_number } %>
<%= render 'shared/folding_panel_inner_top', { subtitle: nil } %>
<%= render 'shared/item_field', { icone: 'ambulance', field_name: 'emergency_contact_name', field_value: @user.emergency_contact_name ||= '' } %>
<%= render 'shared/item_field', { icone: 'phone', field_name: 'emergency_contact_phone', field_value: @user.emergency_contact_phone ||= '' } %>
<%= render 'shared/item_field', { icone: 'users', field_name: 'emergency_contact_relationship', field_value: @user.emergency_contact_relationship ||= '' } %>
<%= render 'shared/folding_panel_bottom' %>

<% order_number += 1 %>
<% no_results = @memberships.empty? %>
<%= render 'shared/folding_panel_top', { title: 'memberships', order_number: order_number } %>
<%= render 'shared/folding_panel_inner_top', { subtitle: 'user_memberships', no_results: no_results } %>
<%= render partial: 'shared/memberships', collection: @memberships unless no_results %>
<%= render 'shared/folding_panel_bottom' %>

<% order_number += 1 %>
<% no_results = @attendances.empty? %>
<%= render 'shared/folding_panel_top', { title: 'attendances', order_number: order_number } %>
<%= render 'shared/folding_panel_inner_top', { subtitle: 'user_training_sessions', no_results: no_results } %>
<%= render partial: 'shared/attendances', collection: @attendances unless no_results %>
<%= render 'shared/folding_panel_bottom' %>

<%= render 'shared/accordion-page-bottom' %>

