<div>
<%= simple_form_for @training do |f| %>

  <%= f.association :board_members,
      label: t('pick_a_board_member'),
      collection: User.board_members.all.sort_by { |b| b.last_name },
      include_blank: false,
      label_method: :full_name,
      value_method: :id,
      include_hidden: false
  %>
  <%= f.button :submit %>

<% end %>
</div>
