<div class="row list list-group">

    <div class="list-group-item active"><%= t 'h1_trainings' %></div>

    <%= paginate @trainings %>

    <% @trainings.each do |t| %>
      <%= link_to t, class:'list-group-item clearfix' do %>
        <div class='col-xs-4 col-sm-3'>
          <%= l t.date_time, format: :complete %>
        </div>
        <div class='hidden-xs col-sm-3'>
          <%= t t.theme %>
        </div>
        <div class='hidden-xs col-sm-6'>
          <%= t t.location %>
        </div>
      <% end %>
    <% end %>

    <%= paginate @trainings %>

</div>

